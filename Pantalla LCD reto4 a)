#include <Wire.h>
#include <LiquidCrystal_I2C.h>

#define TRIG 9   // Pin TRIG del HC-SR04
#define ECHO 8   // Pin ECHO del HC-SR04

LiquidCrystal_I2C lcd(0x27,16,2);  // Dirección y tamaño del LCD

void setup() {
  lcd.init();        
  lcd.backlight();   

  pinMode(TRIG, OUTPUT);
  pinMode(ECHO, INPUT);
}

void loop() {
  // Generar pulso ultrasónico
  digitalWrite(TRIG, LOW);
  delayMicroseconds(2);
  digitalWrite(TRIG, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG, LOW);

  // Medir tiempo de ida y vuelta
  long duracion = pulseIn(ECHO, HIGH);

  // Convertir a distancia
  float distancia_cm = duracion * 0.034 / 2;
  float distancia_in = distancia_cm / 2.54;

  // Mostrar en LCD
  lcd.clear();
  
  lcd.setCursor(0,0);
  lcd.print("Dist:");
  lcd.print(distancia_cm,1); // 1 decimal
  lcd.print(" cm");

  lcd.setCursor(0,1);
  lcd.print("Dist:");
  lcd.print(distancia_in,1);
  lcd.print(" in");

  delay(500);
}
