#include <Wire.h>
#include <LiquidCrystal_I2C.h>

#define TRIG 9   // Pin TRIG del HC-SR04
#define ECHO 8   // Pin ECHO del HC-SR04

LiquidCrystal_I2C lcd(0x27,16,2);  // Dirección y tamaño del LCD

void setup() {
  lcd.init();        
  lcd.backlight();   

  pinMode(TRIG, OUTPUT);
  pinMode(ECHO, INPUT);
}

void loop() {
  // Generar pulso ultrasónico
  digitalWrite(TRIG, LOW);
  delayMicroseconds(2);
  digitalWrite(TRIG, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG, LOW);

  // Medir tiempo de ida y vuelta
  long duracion = pulseIn(ECHO, HIGH);

  // Convertir a distancia en cm
  float distancia_cm = duracion * 0.034 / 2;

  // Limpiar y mostrar distancia
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("Dist: ");
  lcd.print(distancia_cm,1);
  lcd.print(" cm");

  // Mostrar mensaje según rango
  lcd.setCursor(0,1);
  if (distancia_cm > 60) {
    lcd.print("Estado: Lejos");
  } 
  else if (distancia_cm >= 30 && distancia_cm <= 60) {
    lcd.print("Estado: Medio");
  } 
  else {
    lcd.print("Estado: Cerca");
  }

  delay(500);
}
